<%= form_with(model: user, class: "needs-validation") do |f| %>
  <%= render "layouts/message", model: user %>

  <div class="mb-3">
    <%= f.label :role, "権限", class: "form-label" %>
    <%= f.select :role, roles_pulldown, {}, class: "form-select" %>
  </div>

  <% if current_user.admin? %>
    <div class="mb-3">
      <%= f.label :shop_id, "ショップ", class: "form-label" %>
      <%= f.collection_select :shop_id, Shop.all, :id, :name, { include_blank: "未所属" }, class: "form-select" %>
    </div>
  <% else %>
    <%= f.hidden_field :shop_id, value: current_user.shop_id %>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, "名前", class: "form-label" %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :email, "メールアドレス", class: "form-label" %>
    <%= f.email_field :email, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :password, "パスワード", class: "form-label" %>
    <%= f.password_field :password, class: "form-control", required: user.new_record? %>
    <% unless user.new_record? %>
      <div class="form-text">変更しない場合は空欄のままにしてください</div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, "パスワード（確認）", class: "form-label" %>
    <%= f.password_field :password_confirmation, class: "form-control", required: user.new_record? %>
  </div>

  <div class="d-flex gap-2">
    <%= f.submit "保存", class: "btn btn-primary" %>
    <%= link_to "キャンセル", users_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>
