<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h3 mb-0">ユーザー一覧</h1>
  <%= link_to new_user_path, class: "btn btn-primary" do %>
    <i class="fa-solid fa-plus me-1"></i>新規登録
  <% end %>
</div>

<div class="d-flex flex-column" style="min-height: calc(100vh - 200px);">
  <div class="table-responsive flex-grow-1">
    <table class="table table-hover mb-0 h-100 table-striped">
      <thead class="table-light">
        <tr>
          <th>ID</th>
          <th>名前</th>
          <th>メールアドレス</th>
          <th>権限</th>
          <% if admin? %>
            <th>ショップ</th>
          <% end %>
          <th>登録日</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= link_to user.name, user_path(user) %></td>
            <td><%= user.email %></td>
            <td><%= role_labels(user.role) %></td>
            <% if admin? %>
              <td><%= user.shop&.name %></td>
            <% end %>
            <td><%= user.created_at.strftime("%Y/%m/%d") %></td>
            <td>
              <%= link_to edit_user_path(user), class: "btn btn-sm btn-outline-secondary me-1" do %>
                <i class="fa-solid fa-pen-to-square"></i>
              <% end %>
              <%= link_to user_path(user), data: { turbo_method: :delete, turbo_confirm: "「#{user.name}」を削除しますか？" }, class: "btn btn-sm btn-outline-danger" do %>
                <i class="fa-solid fa-trash"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
