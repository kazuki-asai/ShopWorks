<%= form_with(model: customer, class: "needs-validation h-adr") do |f| %>
  <span class="p-country-name" style="display:none;">Japan</span>
  <%= render "layouts/message", model: customer %>

  <div class="mb-3">
    <%= f.label :name, "名前", class: "form-label" %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= f.label :last_name_kana, "セイ", class: "form-label" %>
      <%= f.text_field :last_name_kana, class: "form-control", placeholder: "例: ヤマダ" %>
    </div>
    <div class="col-md-6 mb-3">
      <%= f.label :first_name_kana, "メイ", class: "form-label" %>
      <%= f.text_field :first_name_kana, class: "form-control", placeholder: "例: タロウ" %>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :email, "メールアドレス", class: "form-label" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :phone, "電話番号", class: "form-label" %>
    <%= f.telephone_field :phone, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :postal_code, "郵便番号", class: "form-label" %>
    <%= f.text_field :postal_code, class: "form-control p-postal-code", placeholder: "例: 1234567" %>
  </div>

  <div class="mb-3">
    <%= f.label :address, "住所", class: "form-label" %>
    <%= f.text_field :address, class: "form-control p-region p-locality p-street-address p-extended-address" %>
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= f.label :gender, "性別", class: "form-label" %>
      <%= f.select :gender, [["男性", "male"], ["女性", "female"], ["その他", "other"]], { include_blank: "選択してください" }, { class: "form-select" } %>
    </div>
    <div class="col-md-6 mb-3">
      <%= f.label :birthday, "生年月日", class: "form-label" %>
      <%= f.date_field :birthday, class: "form-control" %>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :password, "パスワード", class: "form-label" %>
    <%= f.password_field :password, class: "form-control" %>
    <% unless customer.new_record? %>
      <div class="form-text">変更しない場合は空欄のままにしてください</div>
    <% end %>
  </div>

  <div class="mb-3">
    <% if admin? %>
      <%= f.label :shop_id, "ショップ", class: "form-label" %>
      <%= f.collection_select :shop_id, Shop.order(:name), :id, :name, { prompt: "選択してください" }, { class: "form-select", required: true } %>
    <% else %>
      <%= f.hidden_field :shop_id, value: current_user.shop_id %>
    <% end %>
  </div>

  <div class="d-flex gap-2">
    <%= f.submit '保存', class: "btn btn-primary" %>
    <%= link_to "キャンセル", customers_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>
