<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h3 mb-0">顧客一覧</h1>
  <% if policy(:customers_controller).new? %>
    <%= link_to new_customer_path, class: "btn btn-primary" do %>
      <i class="fa-solid fa-plus me-1"></i>新規登録
    <% end %>
  <% end %>
</div>

<div class="d-flex flex-column" style="min-height: calc(100vh - 200px);">
  <div class="table-responsive flex-grow-1">
    <table class="table table-hover mb-0 h-100 table-striped">
      <thead class="table-light">
        <tr>
          <% if admin? %>
            <th>ID</th>
            <th>ショップ</th>
          <% end %>
          <th>名前</th>
          <th>フリガナ</th>
          <th>メールアドレス</th>
          <th>電話番号</th>
          <th>性別</th>
          <th>登録日</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <% if admin? %>
              <td><%= customer.id %></td>
              <td><%= customer.shop&.name %></td>
            <% end %>
            <td><%= link_to customer.name, customer_path(customer) %></td>
            <td><%= [customer.last_name_kana, customer.first_name_kana].compact_blank.join(" ") %></td>
            <td><%= customer.email %></td>
            <td><%= customer.phone %></td>
            <td>

            </td>
            <td><%= l(customer.created_at, format: :short) rescue customer.created_at.strftime("%Y/%m/%d") %></td>
            <td>
              <% if policy(:customers_controller).edit? %>
                <%= link_to edit_customer_path(customer), class: "btn btn-sm btn-outline-secondary me-1" do %>
                  <i class="fa-solid fa-pen-to-square"></i>
                <% end %>
              <% end %>
              <%= link_to customer_path(customer), data: { turbo_method: :delete, turbo_confirm: "「#{customer.name}」を削除しますか？" }, class: "btn btn-sm btn-outline-danger" do %>
                <i class="fa-solid fa-trash"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
