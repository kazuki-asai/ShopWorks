<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h3 mb-0">カラー一覧</h1>
  <div class="d-flex gap-2">
    <%= link_to new_color_path, class: "btn btn-primary" do %>
      <i class="fa-solid fa-plus me-1"></i>新規登録
    <% end %>
    <%= link_to create_defaults_colors_path, data: { turbo_method: :post, turbo_confirm: "定番カラーを作成しますか？" }, class: "btn btn-outline-primary" do %>
      <i class="fa-solid fa-wand-magic-sparkles me-1"></i>定番カラーの作成
    <% end %>
  </div>
</div>

<div class="d-flex flex-column" style="min-height: calc(100vh - 200px);">
  <div class="table-responsive flex-grow-1">
    <table class="table table-hover mb-0 h-100 table-striped">
      <thead class="table-light">
        <tr>
          <% if admin? %>
            <th>ID</th>
            <th>ショップ</th>
          <% end %>
          <th>カラー名</th>
          <th>カラーサンプル</th>
          <th>並び順</th>
          <th>登録日</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% @colors.each do |color| %>
          <tr>
            <% if admin? %>
              <td><%= color.id %></td>
              <td><%= color.shop.name %></td>
            <% end %>
            <td><%= color.name %></td>
            <td ><input class="form-control form-control-color" value="<%= color.hex_code %>" type="color" disabled></td>
            <td><%= color.position %></td>
            <td><%= l(color.created_at, format: :short) rescue color.created_at.strftime("%Y/%m/%d") %></td>
            <td>
              <%= link_to edit_color_path(color), class: "btn btn-sm btn-outline-secondary me-1" do %>
                <i class="fa-solid fa-pen-to-square"></i>
              <% end %>
              <%= link_to color_path(color), data: { turbo_method: :delete, turbo_confirm: "「#{color.name}」を削除しますか？" }, class: "btn btn-sm btn-outline-danger" do %>
                <i class="fa-solid fa-trash"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
